{
        "name": "halcyon-laravel/base",
        "description": "Base",
        "require": {
                "spatie/laravel-sluggable" : "^2.1",
                "yajra/laravel-datatables-oracle": "^8.4",
                "spatie/laravel-translatable": "^2.2"
        },
        "require-dev": {
                "orchestra/testbench": "~3.3.0|~3.4.2|^3.5.0",
                "phpunit/phpunit" : "^5.7|6.2|^7.0",
                "friendsofphp/php-cs-fixer": "^2.10",
                "mockery/mockery": "^1.0",
                "fzaninotto/faker": "^1.7"
        },
        "autoload": {
                "psr-4": {
                        "HalcyonLaravel\\Base\\": "src/"
                }
        },
        "autoload-dev": {
                "psr-4": {
                        "HalcyonLaravel\\Base\\Tests\\": "tests/",
                        "App\\": "tests/App/"
                }
        },
        "extra": {
                "laravel": {
                        "providers": [
                                "HalcyonLaravel\\Base\\Providers\\BaseServiceProvider"
                        ],
                        "aliases": {
                        }
                }
        },
        "scripts": { 
                "phpunit": [
                        "./vendor/bin/phpunit --verbose > output.txt -d memory_limit=2048M"
                ],
                "test": "./vendor/bin/phpunit --verbose",
                "format": [
                        "./vendor/bin/php-cs-fixer fix src/ --show-progress=estimating",
                        "./vendor/bin/php-cs-fixer fix tests/ --show-progress=estimating"
                ]
        }
}
